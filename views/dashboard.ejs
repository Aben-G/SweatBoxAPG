<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - SweatBox APG</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/admin/admin.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Admin Dashboard</h1>
            <div>
                <button id="theme-switcher" class="logout-btn">Toggle Theme</button>
                <a href="/admin/telegram" class="logout-btn">Telegram Settings</a>
                <a href="/admin/logout" class="logout-btn">Logout</a>
            </div>
        </div>

        <div class="tabs">
            <button class="tab-link active" data-tab="contact">Contact Submissions <span class="badge <%= contactSubmissions.length > 0 ? '' : 'badge-zero' %>"><%= contactSubmissions.length %></span></button>
            <button class="tab-link" data-tab="membership">Membership Registrations <span class="badge <%= membershipSubmissions.length > 0 ? '' : 'badge-zero' %>"><%= membershipSubmissions.length %></span></button>
            <button class="tab-link" data-tab="orders">Store Orders <span class="badge <%= orderSubmissions.length > 0 ? '' : 'badge-zero' %>"><%= orderSubmissions.length %></span></button>
        </div>

        <div id="contact" class="tab-content active">
            <div class="tab-header">
                <h2>Contact Form Submissions</h2>
                <button class="delete-btn hidden" data-type="contact">Delete Selected</button>
            </div>
        <% if (contactSubmissions.length > 0) { %>
            <div class="table-wrapper">
                <table class="submissions-table">
                    <thead>
                        <tr>
                            <th><input type="checkbox" class="select-all" data-type="contact"></th>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contactSubmissions.forEach(sub => { %>
                            <tr>
                                <td data-label="Select"><input type="checkbox" class="select-item" data-id="<%= sub.id %>"></td>
                                <td data-label="Date"><%= new Date(sub.data.timestamp).toLocaleString() %></td>
                                <td data-label="Name"><%= sub.data.firstName %> <%= sub.data.lastName %></td>
                                <td data-label="Email"><%= sub.data.email %></td>
                                <td data-label="Phone"><%= sub.data.phone || 'N/A' %></td>
                                <td data-label="Message"><div class="message"><%= sub.data.message %></div></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="no-submissions">No contact form submissions yet.</p>
        <% } %>
    </div>

    <div id="membership" class="tab-content">
        <div class="tab-header">
            <h2>Membership Registrations</h2>
            <button class="delete-btn hidden" data-type="membership">Delete Selected</button>
        </div>
        <% if (membershipSubmissions.length > 0) { %>
            <div class="table-wrapper">
                <table class="submissions-table">
                    <thead>
                        <tr>
                            <th><input type="checkbox" class="select-all" data-type="membership"></th>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Plan</th>
                            <th>Start Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% membershipSubmissions.forEach(sub => { %>
                            <tr>
                                <td data-label="Select"><input type="checkbox" class="select-item" data-id="<%= sub.id %>"></td>
                                <td data-label="Date"><%= new Date(sub.data.timestamp).toLocaleString() %></td>
                                <td data-label="Name"><%= sub.data.firstName %> <%= sub.data.lastName %></td>
                                <td data-label="Email"><%= sub.data.email %></td>
                                <td data-label="Phone"><%= sub.data.phone || 'N/A' %></td>
                                <td data-label="Plan"><%= sub.data.selectedPlan %></td>
                                <td data-label="Start Date"><%= sub.data.startDate || 'N/A' %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="no-submissions">No membership registrations yet.</p>
        <% } %>
    </div>

    <div id="orders" class="tab-content">
        <div class="tab-header">
            <h2>Store Orders</h2>
            <button class="delete-btn hidden" data-type="orders">Delete Selected</button>
        </div>
        <% if (orderSubmissions.length > 0) { %>
            <div class="table-wrapper">
                <table class="submissions-table">
                    <thead>
                        <tr>
                            <th><input type="checkbox" class="select-all" data-type="orders"></th>
                            <th>Date</th>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Total</th>
                            <th>Items</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orderSubmissions.forEach(order => { %>
                            <tr>
                                <td data-label="Select"><input type="checkbox" class="select-item" data-id="<%= order.id %>"></td>
                                <td data-label="Date"><%= new Date(order.data.timestamp).toLocaleString() %></td>
                                <td data-label="Order ID"><strong><%= order.data.orderId %></strong></td>
                                <td data-label="Customer"><%= order.data.firstName %> <%= order.data.lastName %></td>
                                <td data-label="Email"><%= order.data.email %></td>
                                <td data-label="Phone"><%= order.data.phone %></td>
                                <td data-label="Total"><strong>$<%= order.data.total || '0.00' %></strong></td>
                                <td data-label="Items">
                                    <% if (order.data.items && order.data.items.length > 0) { %>
                                        <div class="order-items">
                                            <% order.data.items.forEach(item => { %>
                                                <div class="order-item">
                                                    <%= item.name %> (Qty: <%= item.quantity %>)
                                                </div>
                                            <% }) %>
                                        </div>
                                    <% } else { %>
                                        <em>No items</em>
                                    <% } %>
                                </td>
                                <td data-label="Address">
                                    <div class="shipping-address">
                                        <%= order.data.address || 'N/A' %><br>
                                        <%= order.data.city || '' %> <%= order.data.state || '' %> <%= order.data.zipCode || '' %><br>
                                        <%= order.data.country || '' %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="no-submissions">No orders yet.</p>
        <% } %>
    </div>
    </div>
    <script src="/admin/admin.js"></script>
</body>
</html>
