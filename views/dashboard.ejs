<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - SweatBox APG</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/admin/admin.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Admin Dashboard</h1>
            <div>
                <a href="/admin/telegram" class="logout-btn">Telegram Settings</a>
                <a href="/admin/logout" class="logout-btn">Logout</a>
            </div>
        </div>

        <h2>Contact Form Submissions</h2>
        <% if (contactSubmissions.length > 0) { %>
            <div class="table-wrapper">
                <table class="submissions-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contactSubmissions.forEach(sub => { %>
                            <tr>
                                <td><%= new Date(sub.timestamp).toLocaleString() %></td>
                                <td><%= sub.firstName %> <%= sub.lastName %></td>
                                <td><%= sub.email %></td>
                                <td><%= sub.phone || 'N/A' %></td>
                                <td><div class="message"><%= sub.message %></div></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="no-submissions">No contact form submissions yet.</p>
        <% } %>

        <h2>Membership Registrations</h2>
        <% if (membershipSubmissions.length > 0) { %>
            <div class="table-wrapper">
                <table class="submissions-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Plan</th>
                            <th>Start Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% membershipSubmissions.forEach(sub => { %>
                            <tr>
                                <td><%= new Date(sub.timestamp).toLocaleString() %></td>
                                <td><%= sub.firstName %> <%= sub.lastName %></td>
                                <td><%= sub.email %></td>
                                <td><%= sub.phone || 'N/A' %></td>
                                <td><%= sub.selectedPlan %></td>
                                <td><%= sub.startDate || 'N/A' %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="no-submissions">No membership registrations yet.</p>
        <% } %>

        <h2>Store Orders</h2>
        <% if (orderSubmissions.length > 0) { %>
            <div class="table-wrapper">
                <table class="submissions-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Total</th>
                            <th>Items</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orderSubmissions.forEach(order => { %>
                            <tr>
                                <td><%= new Date(order.timestamp).toLocaleString() %></td>
                                <td><strong><%= order.orderId %></strong></td>
                                <td><%= order.firstName %> <%= order.lastName %></td>
                                <td><%= order.email %></td>
                                <td><%= order.phone %></td>
                                <td><strong>$<%= order.total || '0.00' %></strong></td>
                                <td>
                                    <% if (order.items && order.items.length > 0) { %>
                                        <div class="order-items">
                                            <% order.items.forEach(item => { %>
                                                <div class="order-item">
                                                    <%= item.name %> (Qty: <%= item.quantity %>)
                                                </div>
                                            <% }) %>
                                        </div>
                                    <% } else { %>
                                        <em>No items</em>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="shipping-address">
                                        <%= order.address || 'N/A' %><br>
                                        <%= order.city || '' %> <%= order.state || '' %> <%= order.zipCode || '' %><br>
                                        <%= order.country || '' %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="no-submissions">No orders yet.</p>
        <% } %>
    </div>
</body>
</html>
